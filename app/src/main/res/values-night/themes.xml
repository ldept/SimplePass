<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/NightButtons</item>
        <item name="floatingActionButtonStyle">@style/NightFab</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TestActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="materialButtonStyle">@style/NightButtons</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NightButtons" parent="Widget.AppCompat.Button">
        <!--        <item name="colorButtonNormal">@color/design_default_color_secondary_variant</item>-->
        <!--        <item name="backgroundTint">@color/design_default_color_secondary_variant</item>-->
        <item name="android:background">@drawable/actionbar_border</item>
        <item name="android:backgroundTint">@color/teal_700</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NightFab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/teal_700</item>
    </style>
    <style name="SettingsButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/teal_700</item>
        <item name="backgroundTint">@color/teal_700</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/white</item>
    </style>

</resources>